{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "rootDir": ".",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../dist-electron"
  ]
}